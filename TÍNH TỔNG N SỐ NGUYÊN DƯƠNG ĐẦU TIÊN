package BASIC;

import java.util.Scanner;

public class TongNsonguyenduong {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int T = sc.nextInt();
        for (int i = 0; i < T; i++) {
            Long N = sc.nextLong();
            Long S=N*(N+1)/2;
            System.out.println(S);
        }
    }
}
